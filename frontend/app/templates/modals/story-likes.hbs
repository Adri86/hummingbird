<div class="story-modal">
  {{#bootstrap-modal action="close"}}
    <div class="modal-body">
      <h4>Post Reactions</h4>
      <hr>
      <div class="all-likes">
        <div class="section-label">
          <i class="fa fa-heart"></i> {{model.totalVotes}}
        </div>
        <ul>
          {{#each likers as |liker|}}
            <li {{bind-attr data-tooltip=liker.username}}>
              {{#link-to 'user' liker.username}}
                <img {{bind-attr src=liker.avatar}}>
              {{/link-to}}
            </li>
          {{/each}}
        </ul>
        {{#if canLoadMore}}
          {{load-more action="loadNextPage"}}
        {{/if}}
      </div>
    </div>
  {{/bootstrap-modal}}
</div>
