<div class="container">
  <div class="permalink-wrapper">
    <div class="user-feed">
      {{view "story" content=this}}
    </div>
    <div class="col-sm-5">
      <div class="follow-panel">
        {{#link-to 'user' model.user}}
          <div class="follow-cover" {{bind-attr style=model.user.coverImageStyle}}></div>
        {{/link-to}}
        <div class="user-avatar">
          {{#link-to 'user' model.user}}
            {{avatar model.user 'thumb'}}
          {{/link-to}}

          {{follow-button user=model.user}}

        </div>
        <div class="user-info">
          <h4>
            {{#link-to 'user' model.user}}
              {{model.user.username}}
            {{/link-to}}
          </h4>
          <p class="mini-bio">
            {{model.user.truncatedBio}}
          </p>
        </div>
      </div>

      {{#if group}}
        {{group-box group=model.group}}
      {{/if}}

      {{#unless currentUser.isSignedIn}}
        <div class="guest-cta">
          <p>{{model.user.username}} is using Hummingbird to track, discover and discuss anime and manga with friends. Don't miss any of {{model.user.username}}'s updates.</p>
          {{#link-to 'sign-up' class="btn follow-button"}}Create an Account{{/link-to}}
        </div>
      {{/unless}}
    </div>
  </div>
</div>
