<div class="quote-bubble pull-left cl">
  <div class="review-quote">
    <div class="media">
      <div class="quick-rating">
        <i {{bind-attr class=":fa review.positive:fa-smile-o:fa-frown-o"}}></i>
      </div>
      <div class="media-body">
        <p>"{{review.summary}}"</p>
        <div class="review-details">
          <div class="review-likes">
            {{review.positiveVotes}} out of {{review.totalVotes}} users found this review helpful.
          </div>
          <div class="full-review">
            {{#link-to 'reviews.show' review.id}}Full Reviewâ€¦{{/link-to}}
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="review-source media">
    {{#link-to 'user' review.user}}
      <div class="reviewer-avatar">
        {{avatar review.user 'thumb'}}
      </div>
      <div class="reviewer-name">
        <div>
          {{review.user.username}}
        </div>
      </div>
    {{/link-to}}
  </div>
</div>
