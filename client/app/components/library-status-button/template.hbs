{{#foundation-button data-toggle="status-dropdown" data-test-selector="library-status-button-entry"}}
  <span>
    {{#if entry}}
      {{status}}
      {{fa-icon "caret-down" fixedWidth=true}}
    {{else}}
      {{#if isLoading}}
        {{fa-icon icon="spinner" spin=true}}
      {{else}}
        Add to Library
        {{fa-icon "caret-down" fixedWidth=true}}
      {{/if}}
    {{/if}}
  </span>
{{/foundation-button}}

{{#unless isLoading}}
  {{#foundation-dropdown dropdownId="status-dropdown" closeOnClick=true}}
    <ul class="no-bullet">
      {{#each statuses as |status|}}
        <li>
          <a {{action 'updateStatus' status}}>
            {{status}}
          </a>
        </li>
      {{/each}}
    </ul>
  {{/foundation-dropdown}}
{{/unless}}
