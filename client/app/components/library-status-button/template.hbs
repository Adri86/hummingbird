<button class="button" data-toggle="status-dropdown" data-test-selector="library-status-button-entry">
  <span>
    {{#if entry}}
      {{status}}
      {{fa-icon "caret-down" fixedWidth=true}}
    {{else}}
      {{#if isLoading}}
        {{fa-icon icon="spinner" spin=true}}
      {{else}}
        Add to Library
        {{fa-icon "caret-down" fixedWidth=true}}
      {{/if}}
    {{/if}}
  </span>
</button>

{{#unless isLoading}}
  <div class="dropdown-pane" id="status-dropdown" data-dropdown>
    <ul class="no-bullet">
      {{#each statuses as |status|}}
        <li>
          <a {{action 'updateStatus' status}}>
            {{status}}
          </a>
        </li>
      {{/each}}
    </ul>
  </div>
{{/unless}}
