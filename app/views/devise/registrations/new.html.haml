- title "Register"

.login-register-card
  .row
    .large-8.columns.large-centered
      .panel.login-box.signup
        = form_for(resource, as: resource_name, url: registration_path(:user)) do |f|
          - unless resource.errors.empty?
            .alert-box.alert= devise_error_messages!
          /.login-title Welcome to the beta!
          = link_to omniauth_authorize_path(resource_name, :facebook) do
            .social-buttons
              #fb-signin.fb-button
                = image_tag "icons/fb-logo.png"
                %span FACEBOOK
          %span.login-title-small OR, SIGN UP WITH
          .input-wrap.signup
            .login-input-wrap
              = f.text_field :name, class: 'login-input', placeholder: 'Username'
          .input-wrap.signup
            .login-input-wrap.left
              = f.password_field :password, class: 'login-input', placeholder: 'Password'
            .input-ver-divider
            .login-input-wrap.right
              = f.password_field :password_confirmation, class: 'login-input', placeholder: 'Verify Password'
          .input-wrap.signup
            .login-input-wrap
              = f.email_field :email, class: 'login-input', placeholder: 'E-Mail Address'

          .signup-step-buttons
            = f.submit "Register Account", id: 'login', class: 'login-button'
        .no-account.large-12.columns
          = render "devise/shared/links"
