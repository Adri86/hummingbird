<div class="review-listing">
  {{#each}}
    <div class="col-xs-12 col-md-6">
      {{#link-to 'reviews.show' anime.id id}}
        <div class="review rounded-block">
          <h4 class="reviewer-name">{{anime.displayTitle}}</h4>
          <span class="review-stars">
            {{stars rating}}
          </span>
          <p class="review-summary"> {{summary}}</p>
          <p class="review-likes"> {{positiveVotes}} out of {{totalVotes}} users found this review helpful.</p>
        </div>
      {{/link-to}}
    </div>
  {{/each}}
</div>

{{#if canLoadMore}}
  {{load-more classNames="light" action="loadNextPage"}}
{{/if}}
