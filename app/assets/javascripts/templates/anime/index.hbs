<h1 class="series-title hidden-xs">
  {{canonicalTitle}}
  {{#if alternateTitle}}
    <small>
      {{#bootstrap-tooltip title=alternateTitle placement="right"}}
        <i class="fa fa-question-circle"></i>
      {{/bootstrap-tooltip}}
    </small>
  {{/if}}
</h1>

<div class="hidden-xs">
  {{partial "anime/infobar"}}
</div>

<div class="series-description hidden-xs">
  <p>
    {{truncate-text text=synopsis length=500}}
  </p>

  <div class="social-buttons">
    <div class="fb-like" data-layout="button_count" data-action="like" data-show-faces="false" data-share="false" {{bind-attr data-href=fbLikeURL}}></div>
    <a href="https://twitter.com/share" class="twitter-share-button" data-via="hummingbird_me">Tweet</a>
  </div>
</div>

<div class="info-tabs">
  <ul class="nav nav-tabs">
    <li {{bind-attr class="showGenres:active"}}>
      <a {{action "switchTo" "Genres"}}> Genres</a>
    </li>
    <li {{bind-attr class=":hidden-xs showFranchise:active"}}>
      <a {{action "switchTo" "Franchise"}}> Franchise</a>
    </li>
    {{#unless notYetAired}}
      <li {{bind-attr class=":hidden-xs showQuotes:active"}}>
        <a {{action "switchTo" "Quotes"}}> Quotes</a>
      </li>
    {{/unless}}
    <li {{bind-attr class=":dropdown showCast:active"}}>
      <a class="dropdown-toggle" data-toggle="dropdown">
        Cast <b class="caret"></b>
      </a>
      <ul class="dropdown-menu">
        {{#each language in languages}}
          <li><a {{action "setLanguage" language}}>{{language}}</a></li>
        {{/each}}
      </ul>
    </li>

    <li {{bind-attr class=":hidden-xs showStudios:active"}}>
      <a {{action "switchTo" "Studios"}}> Studios</a>
    </li>

    <li class="dropdown visible-xs">
      <a class="dropdown-toggle" data-toggle="dropdown">
        More <b class="caret"></b>
      </a>
      <ul class="dropdown-menu">
        <li><a {{action "switchTo" "Franchise"}}>Franchise</a></li>
        {{#unless notYetAired}}
          <li><a {{action "switchTo" "Quotes"}}>Quotes</a></li>
        {{/unless}}
        <li><a {{action "switchTo" "Studios"}}>Studios</a></li>
      </ul>
    </li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane active genre-tab">
      <div {{bind-attr class=":slider showGenres::hidden"}}>
        {{partial "media/genres"}}
      </div>
      {{#if showFranchise}}
        {{partial "anime/franchise"}}
      {{/if}}
      <div {{bind-attr class=":slider showQuotes::hidden"}}>
        {{partial "anime/featured_quotes"}}
      </div>
      <div {{bind-attr class=":slider showCast::hidden"}}>
        {{partial "anime/cast"}}
      </div>
      <div {{bind-attr class=":slider showStudios::hidden"}}>
        {{partial "anime/studios"}}
      </div>
    </div>
  </div>
  {{#unless nsfw}}
    <div class="banner-ad">
      {{ad-unit adId="1293412" adClass="257f81e798bd68dd81e60f42838f361f"}}
    </div>
  {{/unless}}
</div>
{{#unless notYetAired}}
  <div class="review-listing">
    <h4>
      {{#if recentlyStartedAiring}}
        First Impressions
      {{else}}
        Trending Reviews
      {{/if}}
      {{#link-to 'reviews.index' classNames="btn btn-xs btn-default pull-right"}} view all{{/link-to}}
    </h4>
    {{#each trendingReviews}}
      {{partial "media/review_summary"}}
    {{else}}
      <div class="trending-review-empty">
        <i class="empty-icon fa fa-meh-o"></i>
        <h4>Well, this is pretty awkward.</h4>
        <p>
          You came to us for reviews and it seems nobody has written one yet. We're going to take a cold shower to wash away the shame. In the meantime, maybe you could write the first review? The fortune and fame are yours for the taking.
        </p>
        <a class="btn btn-default" {{bind-attr href=newReviewURL}}> Write the first review</a>
      </div>
    {{/each}}
  </div>
{{/unless}}
