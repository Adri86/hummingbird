<div class="container">
  <div class="row row-centered">
    <div class="col-xs-6 col-md-offset-3">
      
      {{#each animeQuotes}}
        <div class="rounded-block col-sm-12 clearfix no-padding">
          <p><strong>{{characterName}}:</strong> {{content}}</p>
          <span class="favorited-by">
            <span class="favorite-count">Favorited by {{pluralize favoriteCount "user" "users"}} - </span>
            <a {{action "toggleQuoteFavorite" this}}>
              {{#if isFavorite}}
                Unfavorite this quote
              {{else}}
                Favorite this quote
              {{/if}}
            </a>
          </span>
          <span class="report-quote"><a href="#">Report Quote</a></span>
        </div>
      {{else}}
        <div class="rounded-block col-sm-12 clearfix">
          <p>No quotes listed yet, be the first one to submit a quote.</p>
        </div>
      {{/each}}


    </div>
  </div>
</div>