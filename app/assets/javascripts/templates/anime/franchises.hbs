{{#each franchiseAnime}}
  <div class="rounded-block franchise-show">
    <div class="col-sm-2 no-padding hidden-x">
      <img class="series-poster" {{bind-attr src=posterImage}} />
    </div>
    <div class="col-sm-10 col-xs-12">
      <h4>
        {{series-title}}
        {{#link-to 'anime' id}}{{canonicalTitle}}{{/link-to}}
      </h4>
      {{partial "anime/infobar"}}
      <p>{{truncate-text text=synopsis length=200}}</p>
    </div>
  </div>
{{/each}}
